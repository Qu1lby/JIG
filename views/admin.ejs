	<section id="fh5co-services" data-section="Points">
		<div class="container">
			<div class="row">
				<div class="col-md-12 section-heading text-left" style="padding-bottom:0px; margin-bottom: 20px">
					<h2 class=" left-border to-animate">Gestion des Points</h2>
				</div>
				<div class="col-md-3">
					<div class="form-group">
						<label for="sel1">Groupe :</label>
						<select class="form-control" id="sel1">
							<% for (var i = 0; i < arg['groupes'].length; i++){ %>
								<option value="<%=arg['groupes'][i].id%>" id="yolo"><%=arg['groupes'][i].nom%></option>
							<% } %>
						</select>
					</div>
				</div>
				<div class="col-md-2">
					<div class="form-group">
						<label for="sel1">Points :</label>
  					<input type="number" class="form-control" id="points">
					</div>
				</div>
				<div class="col-md-5">
					<div class="form-group">
						<label >Information :</label>
