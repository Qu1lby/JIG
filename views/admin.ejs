	<script src="js/socket.io-1.3.5.js"></script>
	<script src="js/notify.min.js"></script>

	<script>
	  var socket = io();

		$(".trash_commentaire").on('click', function() {
			socket.emit('del_commentaire', {
				id_commentaire : $(this).attr('id_commentaire')
			});
		});

		$(".trash_points").on('click', function() {
			socket.emit('del_points', {
				id_point : $(this).attr('id_points')
			});
		});

		$("#add_commentaire").on('click', function() {
			socket.emit('add_commentaire', {
				commentaire : document.getElementById("commentaire_input").value
			});
		});

		$("#add_point").on('click', function() {
			socket.emit('add_point', {
				id_groupe : document.getElementById("sel1").value,
				points : document.getElementById("points").value,
				information : document.getElementById("information").value
			});
		});

		$("#reset_first").on('click', function() {
			document.getElementById("reset_all").style.display = 'initial'
		});

		$("#reset_all").on('click', function() {
			socket.emit('reset_data');
		});

		$.notify.addStyle('happyblue', {
		  html: "<div><span data-notify-text/></div>",
		  classes: {
		    base: {
		      "white-space": "nowrap",
		      "background-color": "white",
		      "padding": "5px",
					"border": "1px groove"
		    }
		  }
		});

		socket.on('end', function(data){
			$.notify(data.msg,{position:"bottom right", style:"happyblue"});
		});
	</script>

